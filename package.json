{
  "$schema": "https://json.schemastore.org/package",
  "name": "@mark1russell7/scaffold",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc -b && npm run build:schematics",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .tsbuildinfo",
    "build:schematics": "tsc -p src/schematics/tsconfig.json"
  },
  "sideEffects": false,
  "devDependencies": {
    "typescript": "^5.9.3",
    "@mark1russell7/cue": "github:mark1russell7/cue#main",
    "@types/node": "^22.0.0"
  },
  "description": "Schema-driven scaffolding system with Angular Schematics",
  "schematics": "./schematics/collection.json",
  "dependencies": {
    "@angular-devkit/schematics": "^19.0.0",
    "ts-morph": "^24.0.0"
  }
}
